/*리뷰 모달창*/
function OpenReview() {
	var modal = document.getElementById("Review");
	modal.style.display = "block";
}

function CloseReview() {
	var modal = document.getElementById("Review");
	modal.style.display = "none"; // 모달 창을 숨김
}

/*리뷰 작성 모달창*/
function OpenReviewWrite() {
	var modal = document.getElementById("hmReviewWrite");
	modal.style.display = "block"; // 모달 창을 보이도록 설정
}

function CloseReviewWrite() {
	var modal = document.getElementById("hmReviewWrite");
	modal.style.display = "none"; // 모달 창을 숨김
}